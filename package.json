{
  "name": "nexus-ui",
  "version": "0.0.1",
  "description": "Design Language System for personal projets",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages --ext .js,.ts,.tsx",
    "dev": "npm-run-all --parallel tailwind storybook",
    "types-check": "tsc --skipLibCheck --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "build": "yarn build:config && yarn build:packages && yarn build:cleanup",
    "build:config": "mv tsconfig.json tsconfig.tmp.json && mv tsconfig.production.json tsconfig.json",
    "build:packages": "parcel build 'packages/*/*/' --no-cache",
    "build:cleanup": "mv tsconfig.json tsconfig.production.json && mv tsconfig.tmp.json tsconfig.json",
    "build:tailwind-config": "tsc --project tsconfig.tailwind.json",
    "build:tailwind-css": "postcss .storybook/tailwind.css -o .storybook/build.css",
    "build:tailwind": "yarn build:tailwind-config && yarn build:tailwind-css",
    "build:storybook": "build-storybook",
    "watch:tailwind-css": "TAILWIND_MODE=watch NODE_ENV=development postcss .storybook/tailwind.css -o .storybook/build.css -w",
    "watch:tailwind-config": "yarn build:tailwind-config -w",
    "tailwind": "npm-run-all --parallel watch:tailwind-css watch:tailwind-config",
    "clean": "yarn workspaces foreach -pv --exclude primitives --exclude ssr-testing run clean",
    "reset": "yarn clean && rm -rf node_modules .yarn/cache .parcel-cache .tailwind",
    "bump": "yarn version apply --all",
    "bump:check": "yarn version check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hylickipiotr/nexus-ui.git"
  },
  "author": "hylickipiotr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hylickipiotr/nexus-ui/issues"
  },
  "homepage": "https://github.com/hylickipiotr/nexus-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-typescript": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/template": "^7.14.5",
    "@parcel/babel-plugin-transform-runtime": "^2.0.0-nightly.1823",
    "@parcel/babel-preset-env": "^2.0.0-alpha.3",
    "@storybook/addon-actions": "^6.3.5",
    "@storybook/addon-essentials": "^6.3.5",
    "@storybook/addon-links": "^6.3.5",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.3.5",
    "@types/babel__template": "^7",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "eslint": "^7.31.0",
    "eslint-config-kentcdodds": "^19.1.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  }
}
